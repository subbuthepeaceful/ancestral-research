<h1>Research Checklist</h1>
<%= form_tag checklists_path, :class => "form-horizontal", :role => "form"  do %>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <label for="inputEmail3" class="col-sm-4 control-label">First and Middle Name:</label>
        <div class="col-sm-6">
          <input type="text" class="form-control" id="first_middle_name" placeholder="First and Middle Name">
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label for="inputEmail3" class="col-sm-4 control-label">Last Name:</label>
        <div class="col-sm-6">
          <input type="text" class="form-control" id="last_name" placeholder="Last Name">
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <label for="inputEmail3" class="col-sm-4 control-label">Est. Birth Year:</label>
        <div class="col-sm-4">
          <input type="text" class="form-control" id="birth_year" placeholder="Birth Year">
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label for="inputEmail3" class="col-sm-4 control-label">Birth Location:</label>
        <div class="col-sm-4">
          <input type="text" class="form-control" id="birth_location" placeholder="Birth Location">
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <label for="inputEmail3" class="col-sm-4 control-label">Lived In:</label>
        <div class="col-sm-2">
          <input type="text" class="form-control" id="state_1" placeholder="State">
        </div>
        <div class="col-sm-2">
          <input type="text" class="form-control" id="state_1" placeholder="State">
        </div>
        <div class="col-sm-2">
          <input type="text" class="form-control" id="state_1" placeholder="State">
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <label for="inputEmail3" class="col-sm-4 control-label">Est. Death Year:</label>
        <div class="col-sm-4">
          <input type="text" class="form-control" id="death_year" placeholder="Death Year">
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label for="inputEmail3" class="col-sm-4 control-label">Death Location:</label>
        <div class="col-sm-4">
          <input type="text" class="form-control" id="death_location" placeholder="Death Location">
        </div>
      </div>
    </div>
  </div>
  <button type="button" class="btn btn-primary right">Generate</button>
<% end -%>